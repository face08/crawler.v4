{
  "name": "crawler.v4",
  "version": "1.0.0",
  "description": "nodejs爬虫",
  "main": "dist/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "base": "forever start ./packages/crawler.plugins.base/out/index.js ./packages/crawler.plugins.base/config.js",
    "downloader": "forever start ./packages/crawler.plugins.downloader/out/index.js ./packages/crawler.plugins.downloader/config.js",
    "html": "forever start ./packages/crawler.plugins.html/out/index.js ./packages/crawler.plugins.html/config.js",
    "queue": "forever start ./packages/crawler.plugins.queue/out/index.js ./packages/crawler.plugins.queue/config.js",
    "schedule": "forever start ./packages/crawler.plugins.schedule/out/index.js ./packages/crawler.plugins.schedule/config.js",
    "store": "forever start ./packages/crawler.plugins.store/out/index.js ./packages/crawler.plugins.store/config.js",
    "transform": "forever start ./packages/crawler.plugins.transform/out/start.js ./packages/crawler.plugins.transform/config.js",
    "webapi": "forever start ./packages/crawler.plugins.webapi/out/server.js ./packages/crawler.plugins.webapi/config.js",
    "startall": "forever stopall &&  npm run base && npm run downloader && npm run queue && npm run schedule && npm run store && npm run transform && npm run webapi && npm run html",
    "upc": "cd packages/crawler.plugins.downloader;npm up crawler.plugins.common;cd ../crawler.plugins.html;npm up crawler.plugins.common;cd ../crawler.plugins.queue;npm up crawler.plugins.common;cd ../crawler.plugins.schedule;npm up crawler.plugins.common;"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nick121212/crawler.v4.git"
  },
  "keywords": [
    "crawler",
    "typescript",
    "nodejs",
    "javascript"
  ],
  "author": "NICK",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nick121212/crawler.v4/issues"
  },
  "homepage": "https://github.com/nick121212/crawler.v4#readme",
  "dependencies": {
    "lerna": "^2.0.0-rc.5"
  }
}